{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week10/main/data/US%20Police%20shootings%20in%20from%202015-22%20cleaned.csv"
  },
  "background": null,
  "title": {
    "text": "Victims' Age Distribution",
    "fontSize": 20,
    "font": "Century Gothic"
  },
  "width": 500,
  "height": 300,
  "transform": [
    {
      "calculate": "datum.gender == 'F' ? 'Female' : 'Male'",
      "as": "Gender"
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "legend_highlight",
          "select": {
            "type": "point",
            "fields": [
              "Gender"
            ]
          },
          "bind": "legend"
        }
      ],
      "mark": {
        "type": "bar"
      },
      "encoding": {
        "x": {
          "field": "age",
          "title": "Age",
          "bin": {
            "step": 5
          },
          "axis": {
            "titleFont": "Century Gothic",
            "labelFont": "Century Gothic",
            "grid": false,
            "domain": false
          }
        },
        "y": {
          "aggregate": "count",
          "title": "Number",
          "axis": {
            "titleFont": "Century Gothic",
            "labelFont": "Century Gothic",
            "grid": false 
          }
        },
        "color": {
          "field": "Gender",
          "scale": {
            "range": [
              "#e8a09a",
              "#ca8861"
            ]
          },
          "legend": {
            "orient": "top-right",
            "title": "Gender",
            "titleFont": "Century Gothic",
            "labelFont": "Century Gothic",
            "titleFontSize": 15,
            "labelFontSize": 12,
            "symbolSize": 300
          }
        },
        "opacity": {
          "condition": {
            "param": "legend_highlight",
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "age",
            "type": "quantitative",
            "title": "Age",
            "bin": {
              "step": 5
            }
          },
          {
            "field": "Gender",
            "type": "nominal",
            "title": "Gender"
          },
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Victims"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "point": {
          "filled": false,
          "fill": "white",
          "color": "brown"
        },
        "color": "brown"
      },
      "encoding": {
        "x": {
          "field": "age",
          "title": "Age",
          "bin": {
            "step": 5
          }
        },
        "y": {
          "aggregate": "count",
          "title": "Number"
        },
        "tooltip": [
          {
            "field": "age",
            "type": "quantitative",
            "title": "Age",
            "bin": {
              "step": 5
            }
          },
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Total Victims"
          }
        ]
      }
    }
  ]
}