{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "background": "#efede9",
  "title": {
    "text": "Occurrences by State",
    "fontSize": 20,
    "font": "Century"
  },
  "projection": {
    "type": "albersUsa"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week10/master/data/ne_110m_admin.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week10/master/data/US%20Police%20shootings%20in%20from%202015-22%20cases.csv"
        },
        "key": "State",
        "fields": [
          "Cases"
        ]
      }
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "on": "mouseover"
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Cases",
          "type": "quantitative",
          "title": "Number of Cases",
          "scale": {
            "scheme": "browns"
          },
          "legend": {
            "title": "Number of Cases",
            "titleFont": "Century",
            "labelFont": "Century",
            "titleFontSize": 15,
            "labelFontSize": 15
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Cases",
            "type": "quantitative",
            "title": "Number of Cases"
          }
        ],
        "strokeWidth": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": 3
            }
          ],
          "value": 0.3
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dy": -50,
        "dx": -320,
        "fontSize": 13.5,
        "fontStyle": "bold",
        "font": "Century"
      },
      "encoding": {
        "text": {
          "condition": {
            "test": "datum['properties.name'] == 'California'",
            "value": [
              "California leads all states",
              "with a staggering total of 739 cases."
            ]
          },
          "value": ""
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['properties.name'] == 'California'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}