{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "üëÆ‚Äç‚ôÇÔ∏èüî´US Police Shootings from 2015 to Sep 2022",
    "fontSize": 20,
    "font": "Helvetica"
  },
  "projection": { "type": "albersUsa" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week9/master/data/ne_110m_admin.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_1_states_provinces"
        }
      },
      "params": [
        {
          "name": "highlight",
          "select": { "type": "point", "on": "mouseover" }
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ace9df",
        "stroke": "dimgrey"
      },
      "encoding": {
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" }
        ],
        "strokeWidth": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": 2
            }
          ],
          "value": 0.3
        },
        "opacity": {
          "condition": { "param": "highlight", "value": 1 },
          "value": 0.8
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week9/master/data/US%20Police%20shootings%20in%20from%202015-22.csv"
      },
      "transform": [
        {
          "aggregate": [
            { "op": "count", "field": "state", "as": "Shooting Count" },
            { "op": "average", "field": "longitude", "as": "longitude" },
            { "op": "average", "field": "latitude", "as": "latitude" },
            { "op": "average", "field": "age", "as": "Age" }
          ],
          "groupby": ["state"]
        }
      ],
      "mark": { "type": "circle" },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "Shooting Count",
            "type": "quantitative",
            "title": "Shooting Count"
          },
          { "field": "state", "type": "nominal", "title": "States" },
          {
            "field": "Age",
            "type": "quantitative",
            "title": "Average Age",
            "format": ".0f"
          }
        ],
        "size": {
          "field": "Shooting Count",
          "type": "quantitative",
          "title": "Number of US Police Shootings",
          "scale": { "domain": [1200, 1], "range": [1200, 1] },
          "legend": {
            "title": "Number of US Police Shootings",
            "titleFontSize": 15,
            "titleFont": "Helvetica",
            "direction": "vertical",
            "orient": "right",
            "labelFontSize": 15,
            "labelFont": "Helvetica",
            "titleLimit": 1000
          }
        },
        "opacity": { "value": 1.0 },
        "color": {
          "field": "Shooting Count",
          "type": "quantitative",
          "title": "Number of US Police Shootings",
          "scale": {
            "type": "threshold",
            "domain": [50, 200, 400, 600, 800, 1000, 1200],
            "range": [
              "#FFFF00",
              "#FFD700",
              "#FFA500",
              "#FF6B4E",
              "#FF4500",
              "#FF0000",
              "#8B0000"
            ]
          },
          "legend": {
            "title": "Number of US Police Shootings",
            "titleFont": "Helvetica",
            "titleFontSize": 15,
            "direction": "vertical",
            "orient": "right",
            "labelFontSize": 15,
            "labelFont": "Helvetica",
            "titleLimit": 1000
          }
        }
      }
    }
  ]
}
