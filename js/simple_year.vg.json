{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week10/master/data/output_merged.csv"
  },
  "width": 800,
  "background": null,
  "title": {
    "text": "Timeline of Occurrences",
    "fontSize": 20,
    "font": "Century"
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "line": true,
        "point": {
          "filled": false,
          "fill": "white",
          "size": 100,
          "color": "saddlebrown"
        },
        "strokeWidth": 7,
        "color": "saddlebrown"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "year",
          "axis": {
            "title": "Year",
            "titleFont": "Century",
            "labelFont": "Century"
          }
        },
        "y": {
          "aggregate": "count",
          "title": "Number of Cases",
          "type": "quantitative",
          "axis": {
            "titleFont": "Century",
            "labelFont": "Century",
            "grid": false
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "dx": 12,
        "dy": -10,
        "font": "Century"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "year",
          "axis": {
            "title": "Year",
            "tickCount": 10
          }
        },
        "y": {
          "aggregate": "count",
          "title": "Count",
          "type": "quantitative"
        },
        "text": {
          "aggregate": "count",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dy": -80,
        "dx": 180,
        "fontSize": 13.5,
        "fontStyle": "bold",
        "font": "Century"
      },
      "encoding": {
        "text": {
          "condition": {
            "test": "datum['armed'] == 'unarmed'",
            "value": [
              "The COVID-19 pandemic caused a",
              "substantial decline in cases in 2021."
            ]
          },
          "value": ""
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['armed'] == 'unarmed'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}