{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week10/master/data/US%20Police%20shootings%20in%20from%202015-22%20cleaned.csv"
  },
  "background": null,
  "width": 800,
  "height": 300,
  "title": {
    "text": "Used Weapons of Victims",
    "fontSize": 20,
    "font": "Century Gothic"
  },
  "transform": [
    {
      "groupby": [
        "armed"
      ],
      "aggregate": [
        {
          "op": "count",
          "as": "Count"
        }
      ]
    },
    {
      "filter": "datum.armed !== 'undetermined'"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "Count",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "params": [
    {
      "name": "highlight",
      "select": {
        "type": "point",
        "on": "mouseover"
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "color": "saddlebrown"
      },
      "encoding": {
        "x": {
          "field": "Count",
          "type": "quantitative",
          "axis": {
            "title": "Number of Cases",
            "titleFont": "Century Gothic",
            "labelFont": "Century Gothic"
          }
        },
        "y": {
          "field": "armed",
          "type": "nominal",
          "axis": {
            "title": "Weapon",
            "titleFont": "Century Gothic",
            "labelFont": "Century Gothic",
            "grid": false
          },
          "sort": "-x"
        },
        "tooltip": [
          {
            "field": "armed",
            "title": "Armed Type"
          },
          {
            "field": "Count",
            "title": "Number of Cases"
          }
        ],
        "opacity": {
          "condition": {
            "param": "highlight",
            "value": 1
          },
          "value": 0.2
        }
      }
    }
  ]
}