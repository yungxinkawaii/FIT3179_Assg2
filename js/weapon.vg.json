{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yungxinkawaii/FIT3179_Assg2/main/data/US%20Police%20shootings%20in%20from%202015-22%20cleaned.csv"
  },
  "background": null,
  "width": 800,
  "height": 300,
  "title": {
    "text": "Used Weapons of Victims",
    "fontSize": 20,
    "font": "Century"
  },
  "transform": [
    {
      "groupby": [
        "armed"
      ],
      "aggregate": [
        {
          "op": "count",
          "as": "Count"
        }
      ]
    },
    {
      "filter": "datum.armed !== 'undetermined'"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "Count",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "on": "mouseover"
          }
        }
      ],
      "mark": {
        "type": "bar",
        "color": "saddlebrown"
      },
      "encoding": {
        "x": {
          "field": "Count",
          "type": "quantitative",
          "axis": {
            "title": "Number of Cases",
            "titleFont": "Century",
            "labelFont": "Century"
          }
        },
        "y": {
          "field": "armed",
          "type": "nominal",
          "axis": {
            "title": "Weapon",
            "titleFont": "Century",
            "labelFont": "Century",
            "grid": false
          },
          "sort": "-x"
        },
        "tooltip": [
          {
            "field": "armed",
            "title": "Armed Type"
          },
          {
            "field": "Count",
            "title": "Number of Cases"
          }
        ],
        "opacity": {
          "condition": {
            "param": "highlight",
            "value": 1
          },
          "value": 0.2
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dy": -80,
        "dx": -280,
        "fontSize": 13.5,
        "fontStyle": "bold",
        "font": "Century"
      },
      "encoding": {
        "text": {
          "condition": {
            "test": "datum['armed'] == 'unarmed'",
            "value": ["378 unarmed victims highlight the need to reduce lethal force."]
          },
          "value": ""
        },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['armed'] == 'unarmed'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    }
  }
}